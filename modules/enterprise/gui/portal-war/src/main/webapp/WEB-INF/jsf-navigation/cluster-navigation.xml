<?xml version="1.0"?>

<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

   <!-- Server View/Edit -->
   <navigation-rule>
      <from-view-id>/rhq/ha/viewServer.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/ha/viewServer.xhtml?mode=view&amp;serverId=#{param.serverId}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>edit</from-outcome>
         <to-view-id>/rhq/ha/viewServer.xhtml?mode=edit&amp;serverId=#{param.serverId}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/ha/viewServer.xhtml?mode=view&amp;serverId=#{param.serverId}</to-view-id>
         <redirect/>
      </navigation-case> 
   </navigation-rule>
   
   <!-- Agent View -->
   <navigation-rule>
      <from-view-id>/rhq/ha/viewAgent.xhtml</from-view-id>

      <navigation-case>
         <!-- sorting rule -->
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/ha/viewAgent.xhtml?mode=view&amp;agentId=#{param.agentId}&amp;serverId=#{param.serverId}</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>

   <!-- AffinityGroup View/Edit -->
   <navigation-rule>
      <from-view-id>/rhq/ha/viewAffinityGroup.xhtml</from-view-id>

      <navigation-case> 
         <from-outcome>createSuccess</from-outcome>
         <to-view-id>/rhq/ha/viewAffinityGroup.xhtml?mode=edit&amp;affinityGroupId=#{ViewAffinityGroupDetailsUIBean.affinityGroup.id}</to-view-id>
         <redirect/>
      </navigation-case>
      
      <navigation-case>
         <from-outcome>createFailure</from-outcome>
         <to-view-id>/rhq/ha/viewAffinityGroup.xhtml?mode=create</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/ha/viewAffinityGroup.xhtml?mode=view&amp;affinityGroupId=#{param.affinityGroupId}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>edit</from-outcome>
         <to-view-id>/rhq/ha/viewAffinityGroup.xhtml?mode=edit&amp;affinityGroupId=#{param.affinityGroupId}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/ha/viewAffinityGroup.xhtml?mode=view&amp;affinityGroupId=#{param.affinityGroupId}</to-view-id>
         <redirect/>
      </navigation-case> 
   </navigation-rule>
   
   <!-- AffinityGroup List -->
   <navigation-rule>
      <from-view-id>/rhq/ha/listAffinityGroups.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/ha/listAffinityGroups.xhtml</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>create</from-outcome>
         <to-view-id>/rhq/ha/viewAffinityGroup.xhtml?mode=create</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/ha/listAffinityGroups.xhtml</to-view-id>
         <redirect/>
      </navigation-case> 
   </navigation-rule>

</faces-config>