<?xml version="1.0"?>

<server>
   <mbean code="org.jboss.remoting.transport.Connector"
          name="rhq:service=RemoteApi">
      <attribute name="InvokerLocator">servlet://${jboss.bind.address}:${rhq.server.startup.web.http.port}/jboss-remoting-servlet-invoker/ServerInvokerServlet</attribute>
      <attribute name="Configuration">
         <handlers>
            <handler subsystem="REMOTEAPI">org.rhq.enterprise.server.remote.RemoteSafeAOPInvocationHandler</handler>
         </handlers>
      </attribute>
   </mbean>
</server>
