        <column name="CALL_DESTINATION" type="VARCHAR2" size="4000" required="true"/>
        <index name="RHQ_CALLTIME_DATA_KEY_IDX" unique="true">
            <field ref="SCHEDULE_ID"/>
            <field ref="CALL_DESTINATION"/>
        </index>
    </table>


