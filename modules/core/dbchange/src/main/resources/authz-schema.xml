<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
  <changeSet id="0" author="jsanda">
    <createTable tableName="rhq_role">
      <column name="id" type="integer">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
      <column name="description" type="varchar(100)"/>
      <column name="fsystem" type="boolean"/>
    </createTable>
 
    <createSequence sequenceName="rhq_role_id_seq" startValue="10001"/>

    <createIndex tableName="rhq_role"
                 indexName="rhq_role_name_key"
                 unique="true">
      <column name="name"/>
    </createIndex>
  </changeSet>

  <changeSet id="1" author="jsanda">
    <createTable tableName="rhq_role_resource_group_map">
      <column name="role_id" type="integer">
        <constraints primaryKey="true"
                     primaryKeyName="rhq_role_res_group_map_key"
                     foreignKeyName="fk_role_id_rhq_role"
                     references="rhq_role"/>
      </column>
      <column name="resource_group_id" type="integer">
        <constraints primaryKey="true"
                     primaryKeyName="rhq_role_res_group_map_key"
                     foreignKeyName="fk_resource_group_id_rhq_resource_group"
                     references="rhq_resource_group"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="2" author="jsanda">
    <createTable tableName="rhq_role_ldap_group">
      <column name="id" type="integer">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="role_id" type="integer">
        <constraints foreignKeyName="fk_role_id_rhq_role"
                     references="rhq_role"
                     nullable="false"/>
      </column>
      <column name="ldap_group_name" type="varchar(128)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createSequence sequenceName="rhq_role_ldap_group_id_seq" startValue="10001"/>

    <createIndex tableName="rhq_role_ldap_group"
                 indexName="rhq_role_ldap_group_idx"
                 unique="true">
      <column name="role_id"/>
      <column name="ldap_group_name"/>
    </createIndex>
  </changeSet>

  <changeSet id="3" author="jsanda">
    <createTable tableName="rhq_permission">
      <column name="role_id" type="integer">
        <constraints primaryKey="true"
                     primaryKeyName="rhq_permission_pk"
                     foreignKeyName="fk_role_id_rhq_permission"
                     references="rhq_role"/>
      </column>
      <column name="operation" type="integer">
        <constraints primaryKey="true"
                     primaryKeyName="rhq_permission_pk"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="4" author="jsanda">
    <createTable tableName="rhq_subject">
      <column name="id" type="integer">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
      <column name="configuration_id" type="integer">
        <constraints foreignKeyName="fk_configuration_id_rhq_config"
                     references="rhq_config"/>
      </column>
      <column name="first_name" type="varchar(100)"/>
      <column name="last_name" type="varchar(100)"/>
      <column name="email_address" type="varchar(100)"/>
      <column name="sms_address" type="varchar(100)"/>
      <column name="phone_number" type="varchar(100)"/>
      <column name="department" type="varchar(100)"/>
      <column name="factive" type="boolean" defaultValue="true">
        <constraints nullable="false"/>
      </column>
      <column name="fsystem" type="boolean" defaultValue="false">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createSequence sequenceName="rhq_subject_id_seq" startValue="10001"/>

    <createIndex tableName="rhq_subject"
                 indexName="rhq_auth_subject_auth_key"
                 unique="true">
      <column name="name"/>
    </createIndex>
  </changeSet>

  <changeSet id="5" author="jsanda">
    <createTable tableName="rhq_subject_role_map">
      <column name="subject_id" type="integer">
        <constraints foreignKeyName="fk_subject_id_rhq_subject"
                     references="rhq_subject"
                     primaryKey="true"
                     primaryKeyName="rhq_subject_role_mapping_key"/>
      </column>
      <column name="rhq_role_id" type="integer">
        <constraints foreignKeyName="fk_role_id_rhq_role"
                     references="rhq_role"
                     primaryKey="true"
                     primaryKeyName="rhq_subject_role_mapping_key"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="6" author="jsanda">
    <createTable tableName="rhq_subject_role_ldap_map">
      <column name="subject_id" type="integer">
        <constraints foreignKeyName="fk_subject_id_rhq_subject"
                     references="rhq_subject"
                     primaryKey="true"
                     primaryKeyName="rhq_subject_role_ldap_map_pk"/>
      </column>
      <column name="rhq_role_id" type="integer">
        <constraints foreignKeyName="fk_role_id_rhq_role"
                     references="rhq_role"
                     primaryKey="true"
                     primaryKeyName="rhq_subject_role_ldap_map_pk"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="7" author="jsanda">
    <comment>Create the overlorduser</comment>
    <insert tableName="rhq_subject">
      <column name="id" value="1"/>
      <column name="name" value="admin"/>
      <column name="first_name" value="Super"/>
      <column name="last_name" value="User"/>
      <column name="fsystem" value="true"/>
    </insert>

    <rollback>
      <delete tableName="rhq_subject">
        <where>id = 1</where>
      </delete>
    </rollback>
  </changeSet>

  <changeSet id="8" author="jsanda">
    <comment>Create the initial rhqadmin user</comment>
    <insert tableName="rhq_subject">
      <column name="id" value="2"/>
      <column name="name" value="${admin.username}"/>
      <column name="first_name" value="rhq"/>
      <column name="last_name" value="Administrator"/>
      <column name="email_address" value="${admin.email}"/>
      <column name="fsystem" value="false"/>
    </insert>

    <rollback>
      <delete tableName="rhq_subject">
        <where>id = 2</where>
      </delete>
    </rollback>
  </changeSet>

  <changeSet id="9" author="jsanda">
    <comment>Define the system root role which includes our overlord and rhqadmin users</comment>
    <insert tableName="rhq_role">
      <column name="id" value="1"/>
      <column name="name" value="Super User Role"/>
      <column name="fsystem" value="true"/>
      <column name="description" 
              value="System superuser role that provides full access to everything. This role cannot be modified."/>
    </insert>
    <insert tableName="rhq_role">
      <column name="id" value="2"/>
      <column name="name" value="All Resource Role"/>
      <column name="fsystem" value="false"/>
      <column name="description"
              value="Provides full access to all resources in inventory. Cannot modify users, roles or server settings."/>
    </insert>

    <rollback>
      <delete tableName="rhq_role">
        <where>id = 2 or id = 1</where>
      </delete>
    </rollback>
  </changeSet>
</databaseChangeLog>