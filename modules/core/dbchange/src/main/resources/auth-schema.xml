<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
  <changeSet id="0" author="jsanda">
    <createTable tableName="rhq_principal">
      <column name="id" type="integer">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="principal" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
      <column name="password" type="varchar(64)">
        <constraints nullable="false"/>
      </column>
    </createTable>
 
    <createSequence sequenceName="rhq_principal_id_seq" startValue="10001"/>
  </changeSet>

  <changeSet id="1" author="jsanda">
    <insert tableName="rhq_principal">
      <column name="id" value="2"/>
      <column name="principal" value="${admin.username}"/>
      <column name="password" value="${admin.password}"/>
    </insert>

    <rollback>
      <delete tableName="rhq_principal">
        <where>id = 2</where>
      </delete>
    </rollback>
  </changeSet>
</databaseChangeLog>