<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
  <changeSet id="0" author="jsanda">
    <createTable tableName="rhq_saved_search">
      <column name="id" type="integer">
        <constraints primaryKey="true" nullable="false"/>
      </column>      
      <column name="context" type="varchar(25)">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="varchar(200)">
        <constraints nullable="false"/>
      </column>
      <column name="description" type="varchar(500)"/>
      <column name="pattern" type="varchar(1000)">
        <constraints nullable="false"/>
      </column>
      <column name="last_compute_time" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="result_count" type="bigint"/>
      <column name="subject_id" type="integer">
        <constraints foreignKeyName="fk_subject_id_rhq_subject"
                     references="rhq_subject"
                     nullable="false"/>
      </column>
      <column name="global" type="boolean">
        <constraints nullable="false"/>
      </column>
    </createTable>
 
    <createSequence sequenceName="rhq_saved_search_id_seq" startValue="10001"/>
  </changeSet>

  <changeSet id="1" author="jsanda">
    <comment>Create global, default saved searches</comment>
    <insert tableName="rhq_saved_search">
      <column name="id" value="1"/>
      <column name="context" value="RESOURCE"/>
      <column name="name" value="Downed Platforms"/>
      <column name="description" value="All downed machines across the entire enterprise"/>
      <column name="pattern" value="availability=down category=platform"/>
      <column name="last_compute_time" value="0"/>
      <column name="subject_id" value="1"/>
      <column name="global" value="true"/>
    </insert>

    <insert tableName="rhq_saved_search">
      <column name="id" value="2"/>
      <column name="context" value="RESOURCE"/>
      <column name="name" value="Downed Servers"/>
      <column name="description" value="All downed servers across the entire enterprise"/>
      <column name="pattern" value="availability=down category=server"/>
      <column name="last_compute_time" value="0"/>
      <column name="subject_id" value="1"/>
      <column name="global" value="true"/>
    </insert>

    <rollback>
      <delete tableName="rhq_saved_search">
        <where>id = 1 or id = 2</where>
      </delete>
    </rollback>
  </changeSet>
</databaseChangeLog>