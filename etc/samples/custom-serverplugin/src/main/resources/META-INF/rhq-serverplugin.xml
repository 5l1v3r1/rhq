<?xml version="1.0" encoding="UTF-8" ?>

<generic-plugin name="CustomGenericPlugin"
                displayName="My Custom Generic Plugin"
                description="A custom generic plugin."
                package="org.custom"
                version="1.0"
                apiVersion="2.0" 
                xmlns="urn:xmlns:rhq-serverplugin.generic"
                xmlns:serverplugin="urn:xmlns:rhq-serverplugin"
                xmlns:c="urn:xmlns:rhq-configuration">

    <serverplugin:lifecycle-listener class="MyLifecycleListener">
        <serverplugin:schedule concurrent="true">
            <serverplugin:period>30000</serverplugin:period>
        </serverplugin:schedule>
    </serverplugin:lifecycle-listener>

    <serverplugin:scheduled-job jobId="first-scheduled-job" concurrent="false" class="MyScheduledJob">
        <serverplugin:cron>0 0/5 * * * ?</serverplugin:cron>
    </serverplugin:scheduled-job>

    <serverplugin:scheduled-job jobId="sample-job-2" concurrent="true" class="MyScheduledJob">
        <serverplugin:period>60000</serverplugin:period>
    </serverplugin:scheduled-job>

    <serverplugin:plugin-configuration>
        <c:simple-property name="myCustomProperty" type="string" required="true"
                           description="A property my plugin needs to be properly configured" />
    </serverplugin:plugin-configuration>

</generic-plugin>
